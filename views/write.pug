block content
    .profile-page
       if (article.article_content)
           fieldset
               form(action='/medium/update_article/'+ article._id + '', method='post')
                   input.ghost-input(name='title', id='title', type='text', value= article.article_title, required='')
                   input.ghost-input(name='article', id='article', type='text', value= article.article_content, required='')
