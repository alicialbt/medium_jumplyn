extends layout

block content
    .container
        .mainheading
            h1.sitetitle Medium 4 Jumplyn
        section.featured-posts
            .section-title
                h2
                    span Featured
            .card-columns.listfeaturedtag
                if articles
                    each val in articles
                        .card
                            .row
                                .col-md-7
                                    .card-block
                                        h2.card-title
                                            a(href='/medium/article/' + val._id + '') #{val.article_title}
                                        .metafooter
                                            .wrapfooter
                                                span.post-read-more
                                                    a(href='/medium/article/' + val._id + '') Lire
                                                        svg.svgIcon-use(width='25', height='25', viewbox='0 0 25 25')
